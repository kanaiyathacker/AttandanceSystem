<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:actionBarStyle">@style/ActionBarIPS</item>
    </style>


    <style name="MyApp.NumberPicker" parent="android:Widget.DatePicker">
        <item name="android:divider">@color/border_color</item>
    </style>

    <style name="RadioButtonAppTheme" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/apptheme_btn_radio_holo_light</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/pro_bar</item>
    </style>

    <style name="ActionBarIPS" parent="@android:style/Widget.ActionBar">
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="android:background">#FFFFFF</item>
    </style>

</resources>
