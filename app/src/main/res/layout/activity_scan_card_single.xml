<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D6AB87"
    tools:context="com.vaiotech.attendaceapp.ScanCardSingleActivity">

    <TextView
        android:paddingLeft="10dp"
        android:textSize="30sp"
        android:textColor="#512500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID : "
        android:id="@+id/idLableTV"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:textSize="30sp"
        android:textColor="#512500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/idValueTV"
        android:layout_toRightOf="@+id/idLableTV"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:paddingLeft="10dp"
        android:textSize="30sp"
        android:textColor="#512500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:id="@+id/nameLableTV"
        android:layout_below="@+id/idLableTV"
        />

    <TextView
        android:textSize="30sp"
        android:textColor="#512500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/nameValueTV"
        android:layout_toRightOf="@+id/nameLableTV"
        android:layout_below="@+id/idLableTV"
        />

    <TextView
        android:textSize="40sp"
        android:textColor="#512500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/timeTV"
        android:layout_toLeftOf="@+id/hhET"
        android:layout_above="@+id/firstHLine"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="45sp"
        android:gravity="center"
        android:width="40dp"
        android:textColor="#E81B11"
        android:background="#080807"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hhET"
        android:maxLength="2"
        android:layout_above="@+id/firstHLine"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:textSize="45sp"
        android:textColor="#512500"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_above="@+id/firstHLine"
        android:id="@+id/seperateTimeTV"
        android:layout_toRightOf="@+id/hhET"
        android:textStyle="bold" />

    <EditText
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="45sp"
        android:maxLength="2"
        android:gravity="center"
        android:width="40dp"
        android:textColor="#E81B11"
        android:background="#080807"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mmET"
        android:layout_above="@+id/firstHLine"
        android:layout_toRightOf="@+id/seperateTimeTV"
        />

    <View
        android:layout_above="@+id/getInfoBUTTON"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/firstHLine"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="#512500"/>


    <Button
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#FFF5EC"
        android:background="#512500"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Info"
        android:onClick="getInfo"
        android:enabled="false"
        android:id="@+id/getInfoBUTTON"
        android:layout_above="@+id/inBUTTON"
        />

    <Button
        android:layout_alignParentStart="true"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="#FFF5EC"
        android:background="#512500"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Time"
        android:onClick="save"
        android:id="@+id/inBUTTON"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="#FFF5EC"
        android:background="#512500"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out Time"
        android:onClick="save"
        android:id="@+id/outBUTTON"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
