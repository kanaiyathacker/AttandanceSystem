<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#1C5EBB"
    tools:context="com.vaiotech.attendaceapp.ViewReportActivity">


    <LinearLayout
        android:id="@+id/adminLinear"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="0dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="10"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_weight="1.3"
            android:layout_height="0dp"
            >
            <TextView
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity"
                android:id="@+id/activityTV"
                />
            <TextView
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:id="@+id/activityColonTV"
                />
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/activitySpinner"
                >
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
        >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="match_parent"
            >
                <TextView
                    android:layout_weight="0.9"
                    android:text="Total Strength"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/totalStrengthTV"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:text=":"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/totalStrengthColonTV"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:background="#FFFFFF"
                    android:text="0"
                    android:layout_height="fill_parent"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#E81B11"
                    android:id="@+id/totalStrengthValueTV"
                    android:layout_toRightOf="@+id/totalStrengthTV"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:text=" "
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="match_parent"
            >
                <TextView
                    android:layout_weight="0.9"
                    android:text="Absent"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/absentTV"
                    android:layout_below="@+id/totalStrengthTV"
                    />
                <TextView
                    android:layout_weight="0.1"
                    android:text=":"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/absentColonTV"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:background="#FFFFFF"
                    android:text="0"
                    android:gravity="center"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textSize="30sp"
                    android:textColor="#E81B11"
                    android:id="@+id/absentValueTV"
                    />
                <TextView
                    android:layout_weight="0.5"
                    android:text=" "
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            >
            <Button
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/absentTV"
                android:text="View Details"
                android:background="@drawable/view_absentee_button"
                android:textColor="#000000"
                android:id="@+id/vadButton"
                android:onClick="viewAbsenteeDetails"
                />

            <Button
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/absentTV"
                android:text="Send Message"
                android:background="@drawable/view_absentee_button"
                android:textColor="#000000"
                android:id="@+id/sendMSGButton"
                android:onClick="sendMessage"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_weight="0.5"
            android:layout_height="0dp"
            >
            <View
                android:layout_above="@+id/getInfoBUTTON"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#FFFFFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_weight="4.7"
            android:layout_height="0dp"
            >
           <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/absentResultLV"
                />

        </LinearLayout>
     </LinearLayout>
</RelativeLayout>
