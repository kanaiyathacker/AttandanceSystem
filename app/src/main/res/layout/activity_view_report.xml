<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#1C5EBB"
    tools:context="com.vaiotech.attendaceapp.ViewReportActivity">


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="right"
            android:text="Total Strength :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:id="@+id/totalStrengthTV"
            />

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:background="#FFFFFF"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/totalStrengthValueTV"
            android:layout_toRightOf="@+id/totalStrengthTV"
            />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="0dp"
            android:layout_toLeftOf="@+id/totalStrengthValueTV"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Absent :"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:id="@+id/absentTV"
            android:layout_below="@+id/totalStrengthTV"
            />

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_weight="0.4"
            android:background="#FFFFFF"
            android:text="0"
            android:layout_height="wrap_content"
            android:layout_width="90dp"
            android:textSize="30sp"
            android:textColor="#E81B11"
            android:id="@+id/absentValueTV"
            android:layout_below="@+id/totalStrengthValueTV"
            android:layout_toRightOf="@+id/absentTV"
            />

    <LinearLayout
        android:weightSum="2"
        android:layout_below="@+id/absentTV"
        android:id="@+id/linearButton"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absentTV"
            android:text="View Details"
            android:background="@drawable/view_absentee_button"
            android:textColor="#000000"
            android:id="@+id/vadButton"
            android:onClick="viewAbsenteeDetails"
        />

        <Button
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:textSize="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/absentTV"
            android:text="Send Message"
            android:background="@drawable/view_absentee_button"
            android:textColor="#000000"
            android:id="@+id/sendMSGButton"
            android:onClick="sendMessage"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:background="@xml/progress_bar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
    />

    <View
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/linearButton"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/secHLine"
        android:background="#000000"/>


    <ListView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/absentResultLV"
        android:layout_below="@+id/secHLine"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
