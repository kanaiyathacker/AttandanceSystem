<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#DCE0E5"
    tools:context="com.vaiotech.attendaceapp.FunctionalMainActivity">


    <LinearLayout
        android:background="#DCE0E5"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <Button
                android:onClick="myProfile"
                android:textSize="25sp"
                android:textColor="#DCE0E5"
                android:background="#604A7B"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="My Profile"
                android:id="@+id/myProfileButton" />

            <Button
                android:onClick="aboutIPresence"
                android:textSize="25sp"
                android:textColor="#DCE0E5"
                android:background="#143153"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="About iPresence"
                android:id="@+id/aboutiPresenceButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:onClick="smartScan"
                android:textSize="25sp"
                android:textColor="#DCE0E5"
                android:background="#009655"
                android:text="Smart Scan"
                android:layout_margin="3dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/smartScanButton"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:onClick="viewReport"
                android:textSize="25sp"
                android:textColor="#DCE0E5"
                android:background="#31859C"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="View Report"
                android:id="@+id/viewReportButton" />

            <Button
                android:onClick="contactUs"
                android:textSize="25sp"
                android:textColor="#DCE0E5"
                android:background="#E46C0A"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Contact Us"
                android:id="@+id/contactUsButton" />

            </LinearLayout>

    </LinearLayout>
</RelativeLayout>
