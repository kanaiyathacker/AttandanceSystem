<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#DCE0E5"
    tools:context="com.vaiotech.attendaceapp.FunctionalMainActivity">


    <LinearLayout
        android:background="#DCE0E5"
        android:weightSum="3"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:paddingBottom="20dp"
                android:gravity="bottom|center"
                android:drawableBottom="@drawable/user_profile1"
                android:onClick="myProfile"
                android:textSize="20sp"
                android:textColor="#DCE0E5"
                android:background="@drawable/myprofile_button"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="My Profile"
                android:id="@+id/myProfileButton" />

            <Button
                android:paddingBottom="20dp"
                android:gravity="bottom|center"
                android:drawableBottom="@drawable/about_info"
                android:onClick="aboutIPresence"
                android:textSize="20sp"
                android:textColor="#DCE0E5"
                android:background="@drawable/about_button"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="About iPresence"
                android:id="@+id/aboutiPresenceButton" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:paddingBottom="20dp"
                android:gravity="bottom|center"
                android:drawableBottom="@drawable/smart_card2"
                android:onClick="smartScan"
                android:textSize="20sp"
                android:textColor="#DCE0E5"
                android:background="@drawable/smartscan_button"
                android:text="Smart Scan"
                android:layout_margin="2dp"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/smartScanButton"
                />

            </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:paddingBottom="20dp"
                android:gravity="bottom|center"
                android:drawableBottom="@drawable/data_information1"
                android:onClick="viewReport"
                android:textSize="20sp"
                android:textColor="#DCE0E5"
                android:background="@drawable/view_report_button"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="View Report"
                android:id="@+id/viewReportButton" />

            <Button
                android:paddingBottom="20dp"
                android:gravity="bottom|center"
                android:drawableBottom="@drawable/contact1"
                android:onClick="contactUs"
                android:textSize="20sp"
                android:textColor="#DCE0E5"
                android:background="@drawable/contact_button"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="Contact Us"
                android:id="@+id/contactUsButton" />

            </LinearLayout>

    </LinearLayout>
</RelativeLayout>
