   <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#C6D9F1"
        tools:context="com.vaiotech.attendaceapp.MainActivity">

       <LinearLayout
           android:weightSum="4"
           android:layout_alignParentTop="true"
           android:id="@+id/mainLinearLayout"
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:orientation="vertical"
       >

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               >

                   <RadioGroup
                       android:id="@+id/modeRadioGroup"
                       android:layout_gravity="center"
                       android:orientation="horizontal"
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content">

                       <RadioButton
                           android:id="@+id/singleModeRB"
                           android:textSize="20sp"
                           android:textColor="#000000"
                           android:layout_weight="1"
                           android:text="Single Mode"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:checked="true" />

                       <RadioButton
                           android:id="@+id/batchModeRB"
                           android:textSize="20sp"
                           android:textColor="#000000"
                           android:layout_weight="1"
                           android:text="Batch Mode"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:checked="false" />

                   </RadioGroup>
               </LinearLayout>

           <LinearLayout
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_gravity="center_horizontal">
                    <Button
                        android:textSize="25sp"
                        android:textColor="#FFF5EC"
                        android:background="#353535"
                        android:onClick="scanQRCode"
                        android:id="@+id/button1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Start QR Scan"
                        android:lines="@integer/viewfinder_border_width" />
                </LinearLayout>
           <LinearLayout
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_gravity="center_horizontal">
                    <Button
                        android:textSize="25sp"
                        android:textColor="#FFF5EC"
                        android:background="#FFC000"
                        android:onClick="scanCard"
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Smart Card Scan"
                        android:lines="@integer/viewfinder_border_length" />
                </LinearLayout>
           <LinearLayout
               android:layout_margin="5dp"
               android:layout_weight="1"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_gravity="center_horizontal">
                    <Button
                        android:textSize="25sp"
                        android:textColor="#FFF5EC"
                        android:background="#92D050"
                        android:onClick="scanVoice"
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Start Voice Scan"/>
                </LinearLayout>
       </LinearLayout>
    </RelativeLayout>


