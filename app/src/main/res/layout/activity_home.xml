<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#B9C6ED"
    tools:context=".HomeActivity">

    <TextView
        android:textSize="80sp"
        android:textColor="#021C68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/counter"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:textSize="40sp"
        android:textColor="#021C68"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/timeTV"
        android:layout_toLeftOf="@+id/hhET"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        />

    <EditText
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="45sp"
        android:gravity="center"
        android:width="40dp"
        android:textColor="#E81B11"
        android:background="#080807"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hhET"
        android:maxLength="2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:textSize="45sp"
        android:textColor="#021C68"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:layout_centerVertical="true"
        android:id="@+id/seperateTimeTV"
        android:layout_toRightOf="@+id/hhET"
        android:textStyle="bold" />

    <EditText
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="45sp"
        android:maxLength="2"
        android:gravity="center"
        android:width="40dp"
        android:textColor="#E81B11"
        android:background="#080807"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mmET"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/seperateTimeTV"
        />

    <View
        android:layout_above="@+id/inBUTTON"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/firstHLine"
        android:layout_marginBottom="20dp"
        android:background="#E5E3DF"/>

    <Button
        android:layout_alignParentStart="true"
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="#B9C6ED"
        android:background="#021C68"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In Time"
        android:onClick="save"
        android:id="@+id/inBUTTON"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />

    <Button
        android:layout_margin="30dp"
        android:textSize="20sp"
        android:textColor="#B9C6ED"
        android:background="#021C68"
        android:width="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out Time"
        android:onClick="save"
        android:id="@+id/outBUTTON"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
         />



</RelativeLayout>
